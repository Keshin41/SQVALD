{% extends 'base.html.twig' %}

{% block title %}Calendrier des évènements{% endblock %}

{% block body %}
	<main class="container">
		{{ form_start(form) }}
		<div style="margin-top: 10px">
			{{ form_label(form.year) }}
			<div class="w-auto d-inline-block align-middle">
				{{ form_widget(form.year) }}
			</div>
		</div>
		{{ form_rest(form) }}
		{{ form_end(form) }}
		{% if events %}
			{% for event in events %}
				<a href="{{ path('showEvent', {'slug':event.slug}) }}"
				   style="color: black; text-decoration: none; padding: 0; text-transform: none; font-weight: normal">
					<div class="member-entry">
						<div class="member-details">

							<h4> {{ event.title }} </h4>
							<div class="row info-list">
								<div class="col-sm-8">
									<i class="fas fa-briefcase"></i>
									<p class="d-inline-block text-break">{{ event.resume }}</p>
								</div>
								<div class="col-sm-4">
									<p>
										<i class="fas fa-briefcase"></i>
										{{ event.category.name }}
									</p>
									<p>
										<i class="fa fa-phone"></i>
										Du {{ event.dateBegin|date('d-m-Y') }} au {{ event.dateEnd|date('d-m-Y') }}
									</p>
									<p>
										<i class="fas fa-map-marker-alt"></i>
										{{ event.place }}
									</p>
								</div>
							</div>
						</div>
					</div>
				</a>
			{% endfor %}
		{% else %}
			<p class="mt-3">Aucun évènement prévu pour l'année choisi</p>
		{% endif %}
	</main>
{% endblock %}
